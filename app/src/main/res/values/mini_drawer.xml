<resources>
  <declare-styleable name="MiniDrawerLayout">
    <attr format="dimension" name="collapseWidth"/>
    <attr format="dimension" name="expandWidth"/>
  </declare-styleable>

  <style name="Widget.Eneim.MiniDrawer" parent="android:Widget">
    <item name="collapseWidth">@dimen/mini_drawer_collapse_width</item>
    <item name="expandWidth">@dimen/mini_drawer_expand_width</item>
  </style>

  <dimen name="addition_elevation">4dp</dimen>
  <dimen name="mini_drawer_collapse_width">?attr/actionBarSize</dimen>
  <dimen name="mini_drawer_expand_width">300dp</dimen>
</resources>